<h1>Editing Book</h1>

<% if @book.errors.any? %>
 <div class="error_explanation"><h2><%= @book.errors.count %>errors prohibited this book from being saved:</h2>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
     <li><%= message %></li>
    <% end %>
  </ul>
 </div>
<% end %>
  

<%= form_with model:@book do |f| %>
  <div class="field">
   <div class="<%= 'field_with_errors' if @book.errors.any? %>">
     <label for="book_title">Title</label>
   </div>
   <div class="<%= 'field_with_errors' if @book.errors.any? %>"><%= f.text_field :title %>
   </div>
  </div>
  <div class="field">
    <div class="<%= 'field_with_errors' if @book.errors.any? %>">
      <label for="book_body">Body</label>
    </div>
    <div class="<%= 'field_with_errors' if @book.errors.any? %>"><%= f.text_area :body %>
    </div>
  </div>
 <div class="action">  <%= f.submit 'Update Book' %></div>

<% end %>

<a class=<%= link_to "Show", book_path(@book) %></a>
<%= "|" %>
<a class=<%= link_to "Back",books_path(@book) %></a>

