<h1>Books</h1>
<table>
  <thead>
   <tr>
     <th>Title</th>
     <th>Body</th>
     <th colspan="3"></th>
   </tr>
  </thead>
  <% @books.each do |book| %>
  <tbody>
   <tr>
     <td><%= book.title %></td>
     <td><%= book.body %></td>
     <td><%= link_to "Show", book_path(book) %></td>
     <td><%= link_to "Edit", edit_book_path(book.id) %></td>
     <td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confim" =>"Are you sure?" %></td>
    </tr>
   </tbody>
   <% end %>
</table>

<h2>New book</h2>
<% if @book.errors.any? %>
 <div class="error_explanation"><h2><%= @book.errors.count %>errors prohibited this book from being saved:</h2>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
     <li><%= message %></li>
    <% end %>
  </ul>
  </div>
<% end %>

<%= form_with model: @book do |f| %>
  <div class="field">
    <div class="<%= 'field_with_errors' if @book.errors[:title].any? %>">
     <label for="book_title">Title</label>
    </div>
    <div class="<%= 'field_with_errors' if @book.errors[:title].any? %>"><%= f.text_field :title %>
    </div>
  </div>
  <div class="field">
     <div class="<%= 'field_with_errors' if @book.errors[:body].any? %> ">
     <label for="book_body">Body</label>
    </div>
    <div class="<%= 'field_with_errors'if @book.errors[:body].any? %>"><%= f.text_area :body %>
    </div>
  </div>
 <div class="action">  <%= f.submit 'Create Book' %></div>

<% end %>
